<div class="container mt-4">
    <h2>Elenco Verbali</h2>
    <a class="btn btn-primary" asp-area="" asp-controller="Verbali" asp-action="AddMulta">Aggiungi Multa</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Data Violazione</th>
                <th>Indirizzo</th>
                <th>Agente</th>
                <th>Data Trascrizione Multa</th>
                <th>importo</th>
                <th>Decurtamento Punti</th>
  
            </tr>
        </thead>
        <tbody>
            @foreach (var verbali in Model)
            {
                <tr>
                    <td>@verbali.DataViolazione</td>
                    <td>@verbali.IndirizzoViolazione</td>
                    <td>@verbali.NominativoAgente</td>
                    <td>@verbali.DataTrascrizioneVerbale</td>
                    <td>@verbali.Importo</td>
                    <td>@verbali.DecurtamentoPunti</td>
                </tr>
            }
        </tbody>
    </table>
</div>