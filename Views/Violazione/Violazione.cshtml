@model List<PoliziaMunicipaleMulte.Models.Violazione>

<div class="container mt-4">
    <h2>Elenco Violazioni</h2>
    <a class="btn btn-primary" asp-area="" asp-controller="Violazione" asp-action="AddViolazione">Aggiungi Violazione</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID Violazione</th>
                <th>Descrizione</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var violazione in Model)
            {
                <tr>
                    <td>@violazione.IDViolazione</td>
                    <td>@violazione.Descrizione</td>
                </tr>
            }
        </tbody>
    </table>
</div>
